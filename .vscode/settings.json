{
    "files.exclude": {
        "**/.cache/": false,
        "CMakeUserPresets.json": true,
    },
    "clangd.checkUpdates": false,
    "clangd.arguments": [
        "--compile-commands-dir",
        "${workspaceFolder}/build/Release/"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "files.associations": {
        "*.prefab": "xml",
        "*.uss": "scss",
        ".import-config": "yaml",
        "*.import": "yaml",
        "*.import-config": "yaml",
        "*.tcc": "cpp"
    }
}